    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch server erlang",
            "type": "erlang",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "arguments": "-sname server",
            "preLaunchTask": "r3 compile"
        },

        {
            "name": "Launch client erlang",
            "type": "erlang",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "arguments": "-sname client",
            "preLaunchTask": "r3 compile"
        }
    ]
}
